@model IEnumerable<MiYa.Models.Orders>

@section scripts{
    <script src="~/Scripts/passData.js"></script>
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.FloatPosition.TOP_RIGHT }, 'google_translate_element');
        }
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script>
        var quant = document.getElementsByClassName('quant')[0],
            carat = document.getElementsByClassName('carat')[0],
                   total = document.getElementsByClassName('total')[0];


        quant.onchange = function (event) {
            var quant_ = parseInt(quant.value),
                carat_ = parseFloat(carat.value);
            total.value = (quant_ * carat_).toFixed(3);
        }
    </script>
    <script src="~/Scripts/passData1.js"></script>

}
<table class="table">
    <tr>
        <th>
            Num RFQ
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Companies.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOrder)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Clarities.Clarity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colors.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuts.Cut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kinds.Kind)
        </th>
        <th>
            <label style="width: 230px;">Rap Scale - CTStone - Size mm</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shapes.Shape)
        </th>
        <th>
            <label>Carat</label>
            @*@Html.DisplayNameFor(model => model.carat)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.TotalCt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Companies.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clarities.Clarity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colors.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuts.Cut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kinds.Kind)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.RapScale_CtStone_Sizemms.RapScale_CtStone_Sizemm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shapes.Shape)
            </td>

            <td class="carat">
                @Html.DisplayFor(modelItem => item.carat)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Quantity)*@
                
                @Html.EditorFor(modelItem => item.Quantity, new { htmlAttributes = new { @class = "form-control quant" } })
                @Html.ValidationMessageFor(modelItem => item.Quantity, "", new { @class = "text-danger" })
            </td>

            <td class="total">
                @Html.DisplayFor(modelItem => item.TotalCt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <div class="actionLinkClass1 card-container1 send" style="padding-left:0vw">
                    <img class="img-send" src="~/Images/sendicon.png" />
                    <input class="buttonToKindOfLink" type="submit" value="Send" />

                    @*@Html.ActionLink("Send", "MyRfqDetails11","Orders",new { id = item.CompanyId , qua=item.Quantity })*@
                </div>
                <div class="actionLinkClass1 card-container1" style="padding-left:2vw">
                    <img class="img-trash" src="~/Images/icons1.png" />
                    @Html.ActionLink("Cancel", "Delete", new { id = item.OrderId })
                </div>
            </td>
        </tr>
    }

</table>
